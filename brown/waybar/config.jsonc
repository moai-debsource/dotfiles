    "clock#date": {
        "format": "ÔÅ≥ {:%a, %b %d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "<span size='150%'>{icon}</span> {capacity}%",
        "format-charging": "<span size='110%'>ÔÉß</span> {capacity}%",
        "format-plugged": "<span size='110%'>Ôá¶</span> {capacity}%",
