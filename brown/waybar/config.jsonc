{
    "position": "top",
    "layer": "top",
    "height": 20,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "modules-left": [
        "custom/arch",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "mpris"
    ],
    "modules-right": [
        "pulseaudio",
        "pulseaudio#microphone",
        "tray",
    //    "bluetooth",
        "cpu",
        "memory",
        "temperature",
        "clock#time",
        "clock#date"
    ],

    "custom/arch": {
        "format": "ÔåÉ",
        "tooltip": false,
        "on-click": "wleave"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "default": "Ôêû ",
            "active": "ÔÄÖ "
        },
        "persistent_workspaces": {
            "*": 9
        }
    },

    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôãâ"]
    },
    "mpris": {
        "format": "{player_icon} {title} - {artist}",
